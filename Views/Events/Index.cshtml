@using CodingEvents.Models

<!--calling model. and this moder spelling start with lowercase m (model)-->

@model List<Event>

<h1>Family Events</h1>
<p>

    <a asp-controller="Events" asp-action="AddEvents">Add Event</a> <!-- this will create a link to go to the AddEvent page-->


</p>
<p> <a asp-controller="Events" asp-action="DeleteEvents">Delete Event</a> <!-- this will create a link to go to the AddEvent page--></p>



<!--if (ViewBag.events.Count == 0)-->


@if (Model.Count == 0)
{
    <p>No Events yet!!</p>
}
else
{
    <table id="customers">
        <tr>
            <th>ID:</th>
            <th> Name:</th>
            <th> Description:</th>
            <th> Date:</th>

            <th>Contact Email</th>
            <th>Event Location</th>
            <th>Number Of Attendee</th>
            <th>Register</th>
            <th> Event Type:</th>
            <th>Edit Event:</th>
        </tr>

      

     
        @foreach (var meeting in Model)
        {
    <tr>
        <td>@meeting.Id</td>
        <td>@meeting.Name</td>
        <td>@meeting.Description</td>
        <td>@meeting.Date</td>
        <td>@meeting.ContactEmail</td>
        <td>@meeting.EventLocation</td>
        <td>@meeting.NumberOfAtendee</td>
        <td>@meeting.Register</td>
        <td>@meeting.Type</td>
        <td>
            <a asp-controller="Events" asp-action="Edit" asp-route-id="@meeting.Id">Edit Event</a>
            @*<form method="post" action="/Events/Delete">
                <input type="hidden" name="eventIds" value="@meeting.Id" />
                <input type="submit" value="Delete" class="btn btn-danger">
            </form>*@ @*// asp-route-id passes an {id?} parameter at the end of our route.*@
        </td>

    </tr>

            }
    </table>
}

