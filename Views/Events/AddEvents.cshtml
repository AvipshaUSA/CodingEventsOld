
@using CodingEvents.ViewModel;

@model AddEventviewModel; 

<h1>Add Event</h1>

<form method="post">
    <div asp-controller="Events" asp-action="AddEvents" class="form-group">
        <label asp-for="Name"></label>

        <input asp-for="Name" />
        <span asp-validation-for="Name"></span>


    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" />
        <span asp-validation-for="Description"></span>
    </div>


    <div class="form-group">
        <label asp-for="Date"></label>
        <input type="date" asp-for="Date" />
        <span asp-validation-for="Date"></span>
    </div>

    <div class="form-group">
        <label asp-for="ContactEmail"></label>
        <input asp-for="ContactEmail" />
        <span asp-validation-for="ContactEmail"></span>
    </div>

    <div class="form-group">
        <label asp-for="EventLocation"></label>
        <input asp-for="EventLocation" />
        <span asp-validation-for="EventLocation"></span>
    </div>
    <div class="form-group">
        <label asp-for="NumberOfAtendee"></label>
        <input asp-for="NumberOfAtendee" />
        <span asp-validation-for="NumberOfAtendee"></span>
    </div>

    <div class="form-group">
        <label asp-for="Register"></label>
        <input asp-for="Register" />
        <span asp-validation-for="Register"></span>
    </div>


    <div class="form-group">
        <label asp-for="Type">Event Type</label>
        <select asp-for="Type" asp-items="Model.EventTypes"></select>     @*asp-items to populate children of items*@
    </div>



    <input type="Submit" value="Add Event!" />


</form>

